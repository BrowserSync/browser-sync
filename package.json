    "eazy-logger": "^2.1.0",
    "emitter-steward": "^0.0.1",
    "foxy": "^7.1.0",
    "glob-watcher": "^0.0.7",
    "immutable": "^3.4.1",
    "localtunnel": "^1.3.0",
    "lodash": "^2.4.1",
    "meow": "^2.0.0",
    "opn": "^1.0.0",
    "portscanner": "^1.0.0",
