    "gulp-contribs": "^0.0.2",
    "gulp-filter": "^1.0.0",
    "gulp-jscs": "^1.3.1",
    "gulp-jshint": "^1.9.0",
    "gulp-ruby-sass": "^0.7.1",
    "gulp-yuidoc": "^0.1.2",
    "istanbul": "^0.3.2",
    "istanbul-coveralls": "^1.0.0",
    "mocha": "*",
    "q": "^1.1.2",
